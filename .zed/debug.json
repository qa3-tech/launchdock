// Project-local debug tasks
//
// For more documentation on how to configure debug tasks,
// see: https://zed.dev/docs/debugger
[
  {
    "label": "debug launchdock",
    "request": "launch",
    "adapter": "CodeLLDB",
    "build": {
      "command": "cargo",
      "args": ["build"]
    },
    "program": "$ZED_WORKTREE_ROOT/target/debug/launchdock",
    "args": ["start"],
    "cwd": "$ZED_WORKTREE_ROOT/target/debug"
  },
  {
    "label": "debug launchdock show",
    "request": "launch",
    "adapter": "CodeLLDB",
    "program": "$ZED_WORKTREE_ROOT/target/debug/launchdock",
    "args": ["show"],
    "cwd": "$ZED_WORKTREE_ROOT/target/debug"
  },
  {
    "label": "debug launchdock stop",
    "request": "launch",
    "adapter": "CodeLLDB",
    "program": "$ZED_WORKTREE_ROOT/target/debug/launchdock",
    "args": ["stop"],
    "cwd": "$ZED_WORKTREE_ROOT/target/debug"
  },
  {
    "label": "debug launchdock logs",
    "request": "launch",
    "adapter": "CodeLLDB",
    "program": "$ZED_WORKTREE_ROOT/target/debug/launchdock",
    "args": ["logs"],
    "cwd": "$ZED_WORKTREE_ROOT/target/debug"
  }
]
